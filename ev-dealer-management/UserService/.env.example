# Database Configuration
ConnectionStrings__DefaultConnection=Data Source=users.db

# JWT Configuration
Jwt__Key=YourSecretKeyHere_MustBeLongEnoughForSecurity_AtLeast32Characters
Jwt__Issuer=evm.local
Jwt__Audience=evm.local

# Frontend URL (for password reset links)
FrontendUrl=http://localhost:5173

# Email Configuration (SMTP)
# Option 1: Gmail SMTP
EmailSettings__SmtpHost=smtp.gmail.com
EmailSettings__SmtpPort=587
EmailSettings__SmtpUser=your-email@gmail.com
EmailSettings__SmtpPassword=your-app-password
EmailSettings__FromEmail=your-email@gmail.com
EmailSettings__FromName=EV Dealer Management
EmailSettings__EnableSsl=true

# Option 2: SendGrid SMTP
# EmailSettings__SmtpHost=smtp.sendgrid.net
# EmailSettings__SmtpPort=587
# EmailSettings__SmtpUser=apikey
# EmailSettings__SmtpPassword=your-sendgrid-api-key
# EmailSettings__FromEmail=noreply@yourdomain.com
# EmailSettings__FromName=EV Dealer Management
# EmailSettings__EnableSsl=true

# Option 3: Outlook/Office365 SMTP
# EmailSettings__SmtpHost=smtp.office365.com
# EmailSettings__SmtpPort=587
# EmailSettings__SmtpUser=your-email@outlook.com
# EmailSettings__SmtpPassword=your-password
# EmailSettings__FromEmail=your-email@outlook.com
# EmailSettings__FromName=EV Dealer Management
# EmailSettings__EnableSsl=true

# Option 4: Custom SMTP Server
# EmailSettings__SmtpHost=mail.yourdomain.com
# EmailSettings__SmtpPort=587
# EmailSettings__SmtpUser=noreply@yourdomain.com
# EmailSettings__SmtpPassword=your-password
# EmailSettings__FromEmail=noreply@yourdomain.com
# EmailSettings__FromName=EV Dealer Management
# EmailSettings__EnableSsl=true

# CORS Configuration
AllowedHosts=*

